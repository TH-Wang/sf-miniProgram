/* components/slideMenu/slideMenu.wxss */
.container{
  width: 150rpx;
  height: 100%;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  background-color: whitesmoke;
  font-size: 13px;
  overflow: hidden;
}
.menu-box{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  transform: translateX(-100%);
  transition: all 0.4s;
}
.active-menu{
  background-color: #eee;
}
.show-menu-box{
  transform: translateX(0);
}