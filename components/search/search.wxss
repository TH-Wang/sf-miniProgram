/* components/search/search.wxss */
@import '../../assets/iconfont/iconfont.wxss';

.container{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 996;
  background-color: white;
  transform: rotateX(45deg) translateY(100%);
  transition: all 0.3s;
  box-shadow: 0 -2px 20px 0 rgba(0, 0, 0, 0.2);
}
.show-container{
  transform: rotateX(0deg) translateY(0%);
}

.header{
  display: flex;
  align-items: center;
}

.icon-l-back{
  margin-left: 26rpx;
}

.search-box{
  margin: 0 auto;
  display: flex;
  align-items: center;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.2);
}
.icon-l-search{
  margin: 0 20rpx 0 30rpx;
}
.text-input{
  letter-spacing: 1px;
  color: #555;
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.result-list{
  height: 100%;
}
.food-item:last-child::after{
  content: '';
  display: block;
  width: 100%;
  height: 180rpx;
}
