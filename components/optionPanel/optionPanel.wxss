/* components/optionPanel/optionPanel.wxss */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 1000;
  perspective: 500;
  -webkit-perspective: 500;
}

@keyframes in {
  0% {opacity: 0.2}
  10% {transform: rotateX(-30deg) translate(-50%, 20%);opacity: 1}
  100% {transform: rotateX(0deg) translate(-50%, -50%); opacity: 1;}
}
@keyframes out {
  0% {transform: rotateX(0deg) translate(-50%, -50%); opacity: 1}
  100% {transform: rotateX(-30deg) translate(-50%, -20%); opacity: 0;}
}

.main{
  width: 74%;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: rotateX(-30deg) translate(-50%, 30%);
  transform-origin: top;
  border-radius: 24rpx;
  overflow: hidden;
}
.in{
  animation: in 0.3s forwards;
}
.out{
  animation: out 0.3s forwards;
}

/* 主要信息容器 */
.container{
  width: 100%;
  height: auto;
  padding: 36rpx 36rpx 0 36rpx;
  box-sizing: border-box;
  background-color: white;
}

/* 菜品信息 */
.name{
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
}
.price-box{
  margin: 24rpx 0 20rpx 0;
}
.price{
  color: #ff7f50;
  font-size: 44rpx;
  font-weight: bold;
  font-family: "等线";
}
.suffix{
  color: #ff7f50;
  margin-left: 3px;
  font-size: 12px;
}
.origin-price{
  margin-left: 8px;
  font-size: 12px;
  color: #999;
  text-decoration: line-through #777;
  font-style: italic;
}
.descs{
  font-size: 24rpx;
  color: #777;
}

/* 选项 */
.option-group{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
}
.option-title{
  margin-bottom: 24rpx;
  color: #555;
  font-size: 28rpx;
}
.option-item + .option-item{
  margin-left: 20rpx;
}
.option-item{
  font-size: 24rpx;
  display: inline-block;
  padding: 12rpx 40rpx;
  border-radius: 8rpx;
  color: #8749A5;
  background-color: #eee;
}
.checked-item{
  color: white;
  background-color: #A56FBF;
}

/* 加入购物车按钮 */
.button-box{
  margin-top: 30rpx;
  padding: 20rpx 0 40rpx 0;
  text-align: right;
}
.add-cart-button{
  display: inline-block;
  width: 210rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #333;
  background-color: #FFFB48;
  font-size: 24rpx;
  text-align: center;
  border-radius: 60rpx;
}

/* 已添加商品列表 */
.added-list-box{
  max-height: 300rpx;
  background-color: white;
}
.added-item{
  padding: 16rpx 36rpx;
  box-sizing: border-box;
  border-top: solid 1px #eee;
}
.added-name,
.added-sum,
.count-button,
.reduce-button,
.add-button,
.count{
  display: inline-block;
  vertical-align: middle;
}
.added-name{
  font-size: 24rpx;
  width: 40%;
}
.added-sum{
  width: 30%;
  text-align: center;
  color: #ff7f50;
}
.added-price{
  font-size: 28rpx;
}
.added-suffix{
  margin-left: 2px;
  font-size: 16rpx;
}
.count-button{
  width: 30%;
  height: 46rpx;
  border-radius: 30rpx;
  background-color: #FFFB48;
  color: #8749A5;
}
.reduce-button, .add-button{
  width: 30%;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  color: #ff7f50;
  font-weight: bold;
  vertical-align: top;
}
.reduce-button{
  font-size: 40rpx;
}
.add-button{
  line-height: 46rpx;
}
.count{
  width: 40%;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 26rpx;
}